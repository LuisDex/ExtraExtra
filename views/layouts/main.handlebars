<body>
  <div class="jumbotron text-center" id="page-header">
    <h1>Space Scraper</h1>
    <a class="btn btn-primary" href="/scrape" id="scrape-button">Scrape the Stars</a>

  </div>
  {{{body}}}

  <script>

    $(".comment-btn").on("click", function (event) {

      event.preventDefault();
      var articleID = $(this).val();
      location.replace("/articles/" + articleID);
    })

    $(".submitBTN").on("click", function(event){

      event.preventDefault();
      var articleID = $(this).val();
      var author = $("#author").val()
      var body =$("#body").val();
      var note = {author:author,body:body};
      console.log(author);
      $.post("/articles/" + articleID, note, function(err){
        if (err) throw err;
      })
    });

  </script>
</body>

